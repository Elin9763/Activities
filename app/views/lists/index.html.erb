<section class="todoapp">
    <header class="header">
        <h1>Activities</h1>
        <input class="new-todo" placeholder="New Activity" autofocus="">
      </header>

      <section class="main">
        <input class="toggle-all" type="checkbox">
        <label for="toggle-all">Mark all as complete</label>
        <ul class="todo-list">
            <% @lists.each do |list| %>
            <li>
                <div class="view">
                    <label><a href="#"><%= list.name %></a></label>
                </div>
            </li>
            <% end %>
        </ul>
      </section>

      <footer class="footer">
      </footer>
</section>
